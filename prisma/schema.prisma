generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

enum AuditAction {
  BLOCKED
  ALLOWED
  WARNING_SHOWN
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  auditRecords AuditRecord[]

  @@map("users")
}

model UrlCheck {
  id             String   @id @default(uuid())
  url            String   @unique
  isPhishing     Boolean
  hasWarning     Boolean  @default(false)
  warningType    String?
  warningSeverity String?
  warningReason  String?
  confidence     Float?
  reason         String?
  checkedAt      DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  userId         String?

  @@index([url])
  @@map("url_checks")
}

model AuditRecord {
  id             String      @id @default(uuid())
  userId         String
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  url            String
  isPhishing     Boolean
  hasWarning     Boolean     @default(false)
  warningType    String?
  warningSeverity String?
  warningReason  String?
  action         AuditAction
  ipAddress      String?
  userAgent      String?
  visitedAt      DateTime    @default(now())
  createdAt      DateTime    @default(now())

  @@index([userId])
  @@index([visitedAt])
  @@index([action])
  @@map("audit_records")
}
